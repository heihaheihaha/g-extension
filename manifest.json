{
  "manifest_version": 3,
  "name": "智能侧边栏助手 (Gemini)",
  "version": "1.0",
  "description": "使用Gemini API总结网页、进行智能对话，并支持中文。",
  "permissions": [
    "activeTab",      
    "scripting",      
    "storage",      
    "contextMenus"   
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/"
  ],
  "options_page": "options.html", 
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "打开智能侧边栏"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "css": ["sidebar_injector.css"] 
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["sidebar.html", "sidebar.css", "sidebar.js", "images/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}